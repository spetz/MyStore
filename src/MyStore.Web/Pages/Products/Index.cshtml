@page
@model IndexModel
@{
}

<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><a asp-page="./Details" asp-route-id="@product.Id">@product.Name</a></h5>
                    <h6 class="card-subtitle mb-2 text-muted">@product.Category</h6>
                    <p class="card-text">@product.Price PLN</p>
                    <form method="post">
                        <button type="submit" class="btn btn-danger"
                                asp-page-handler="delete"
                                asp-route-id="@product.Id">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<hr/>

<h3>Create product</h3>
<div class="row">
    <div class="col-lg-12">
        <form method="post">
            <div class="form-group">
                <label asp-for="Product.Name"></label>
                <input asp-for="Product.Name" class="form-control"/>
                <span asp-validation-for="Product.Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price"></label>
                <input asp-for="Product.Price" class="form-control"/>
                <span asp-validation-for="Product.Price"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Category"></label>
                <select asp-for="Product.Category" asp-items="Model.Categories" class="form-control"></select>
                <span asp-validation-for="Product.Category"></span>
            </div>
            <input type="submit" class="btn btn-success" value="Create"/>
        </form>
    </div>
</div>